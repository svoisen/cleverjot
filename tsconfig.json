{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "assets/*": [ "assets/*" ],
      "components/*": [ "components/*" ],
      "containers/*": [ "containers/*" ],
      "models/*": [ "models/*" ],
      "stores/*": [ "stores/*" ],
      "util/*": [ "util/*" ]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}